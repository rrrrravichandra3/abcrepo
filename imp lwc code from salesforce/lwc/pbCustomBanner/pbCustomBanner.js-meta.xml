<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Preboarding Banner</masterLabel>

    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property type="String" name="pageTitle" translatable="true"/>
            <property type="String" name="welcomeText" translatable="true" default="Welcome"/>
            <property type="String" name="boomerangText" translatable="true"  default="Welcome back"/>
            <property type="String" name="greetingText" translatable="true" default="We are excited to have you!"/>
            <property type="String" name="buttonText" translatable="true"/>
            <property type="String" name="startDateText" translatable="true" default="Start Date"/>
            <property type="String" name="months" translatable="true" default="Jan,Feb,Mar,Apr,May,Jun,Jul,Aug,Sep,Oct,Nov,Dec"/>
            <property type="String" name="titleText" translatable="true" default="Joining as"/>
            <property type="String" name="tooltipText" translatable="true"/>
            <property type="ContentReference" name="contentId" label="contentId1" filter="cms_image"/>
            <property type="ContentReference" name="contentId2" label="contentId2" filter="cms_image"/>
            <property type="ContentReference" name="contentId3" label="contentId3" filter="cms_image"/>
            <property type="ContentReference" name="contentId4" label="contentId4" filter="cms_image"/>
            <property type="ContentReference" name="videoId" label="Video" filter="cms_image"/>
        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>